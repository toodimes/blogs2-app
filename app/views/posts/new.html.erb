  <div class="col-lg-9 col-md-9 col-sm-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="text-center">
          <h3>New Blog Post</h3>
          <% if @post && @post.errors.any? %>
            <h3><%= pluralize(@post.errors.count, "error") %> stopped this post from being added:</h3>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
          <% if @img && @img.errors.any? %>
            <h3><%= pluralize(@img.errors.count, "error") %> stopped this img from being added:</h3>
            <% @img.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
          <%= form_tag "/posts", method: :post do %>
            <input type="text" name="title" class="form-control" placeholder="Title" value="<%= @post.title %>">
            <!-- <input hidden name="user_id" value="<%= current_user.id %>" type="text"> -->
            <br>
            <textarea name="content" class="form-control" rows="20" placeholder="Blog Content"><%= @post.content %></textarea>
            <br>
            <input type="text" name="image" class="form-control" placeholder="Place Umage Url Here">
            <input type="text" name="img_description" class="form-control" placeholder="Image Description">
            <input type="submit" class="btn btn-primary btn-lg pull-right" value="submit">
          <% end %>
        </div>
      </div>
    </div>
  </div>